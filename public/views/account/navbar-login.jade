.navbar-right(ng-controller="LoginCtrl")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        ul.nav.navbar-nav
            li
                a(href="/signup") Sign up
        .form-group
            input.form-control.input-sm(name="username", placeholder="username", ng-model="username")
        .form-group
            input.form-control.input-sm(type="password", name="password", placeholder="password",ng-model="password")
        button.btn.btn-primary.btn-sm(ng-click="login(username, password)") Sign In

    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a(href="", data-toggle="dropdown")
                | {{ identity.currentUser.firstname + ' ' + identity.currentUser.lastname}}
                b.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isAdmin()")
                    a(href="/admin/users") User Admin
                li
                    a(href="/profile") Profile
                li
                    a(href="", ng-click="logout()") Sign Out